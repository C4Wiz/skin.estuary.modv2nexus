			<control type="image">
				<depth>DepthBackground</depth>
				<include>FullScreenDimensions</include>
				<aspectratio>scale</aspectratio>
				<texture colordiffuse="AFFFFFFF">themes/splash.png</texture>
			</control>
		</control>
	</controls>
</window>
